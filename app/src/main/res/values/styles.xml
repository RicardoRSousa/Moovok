<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textViewStyle">@style/ActorTextViewStyle</item>
        <item name="android:buttonStyle">@style/ActorButtonStyle</item>
    </style>

    <style name="ActorTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/actor</item>
    </style>

    <style name="ActorButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/actor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
